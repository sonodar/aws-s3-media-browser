{
  "name": "aws-s3-media-browser",
  "version": "1.0.0",
  "description": "AWS Amplify Gen2 を活用した S3 上の写真・動画ブラウザアプリケーション。ユーザーごとに独立したストレージ空間を提供し、メディアファイルの閲覧・管理を可能にします。",
  "keywords": [
    "aws-amplify",
    "media-browser",
    "react",
    "s3",
    "serverless",
    "typescript"
  ],
  "license": "MIT",
  "author": "sonodar",
  "main": "index.js",
  "scripts": {
    "prepare": "husky",
    "dev": "VITE_ALLOW_SIGNUP=true vite",
    "build": "run-s typecheck build:app",
    "build:app": "vite build",
    "preview": "vite preview",
    "lint": "oxlint .",
    "format": "oxfmt --write .",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "run-p typecheck:*",
    "typecheck:app": "tsc --noEmit",
    "typecheck:amplify": "tsc -p amplify --noEmit",
    "check": "run-p typecheck lint test",
    "check-all": "run-s format check build:app",
    "sandbox": "VITE_ALLOW_SIGNUP=true ampx sandbox"
  },
  "dependencies": {
    "@aws-amplify/ui-react": "^6.13.2",
    "@aws-amplify/ui-react-storage": "^3.14.0",
    "@mantine/core": "^8.0.0",
    "@mantine/hooks": "^8.0.0",
    "@tanstack/react-query": "^5.90.16",
    "@tanstack/react-query-devtools": "^5.91.2",
    "@use-gesture/react": "^10.3.1",
    "aws-amplify": "^6.15.9",
    "jotai": "^2.16.1",
    "jotai-devtools": "^0.13.0",
    "lucide-react": "^0.563.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-player": "^3.4.0",
    "yet-another-react-lightbox": "^3.28.0"
  },
  "devDependencies": {
    "@aws-amplify/backend": "^1.19.0",
    "@aws-amplify/backend-cli": "^1.8.1",
    "@aws-sdk/client-s3": "^3.962.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@types/aws-lambda": "^8.10.159",
    "@types/node": "^25.0.3",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.0.0",
    "@vitest/coverage-v8": "^4.0.16",
    "aws-cdk-lib": "^2.216.0",
    "constructs": "^10.4.4",
    "esbuild": "^0.27.2",
    "happy-dom": "^20.0.11",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "npm-run-all2": "^8.0.4",
    "oxfmt": "^0.27.0",
    "oxlint": "^1.37.0",
    "sharp": "^0.34.5",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vite": "^7.0.0",
    "vitest": "^4.0.16"
  },
  "overrides": {
    "jotai-devtools": {
      "@mantine/core": "$@mantine/core",
      "@mantine/hooks": "$@mantine/hooks",
      "@mantine/code-highlight": {
        "@mantine/core": "$@mantine/core",
        "@mantine/hooks": "$@mantine/hooks"
      }
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "oxlint",
      "oxfmt --write"
    ],
    "*.{json,md,yml,yaml}": [
      "oxfmt --write"
    ]
  }
}
